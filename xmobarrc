Config { font = "xft:Ricty Diminished Discord:antialias=true:size=12"
       , bgColor = "black"
       , fgColor = "glay"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Network "wlan0" [ "-t"       , "u:<rx> - d:<tx>"
                                          , "-L"       , "40"
                                          , "-H"       , "200"
                                          , "-m"       , "3"
                                          , "--normal" , "green"
                                          , "--high"   , "red"
                                          ] 10
                    , Run MultiCpu        [ "-t"       , "<total0>.<total1>.<total2>.<total3>"
                                          , "-L"       , "40"
                                          , "-H"       , "85"
                                          , "-m"       , "2"
                                          , "--normal" , "green"
                                          , "--high"   , "red"
                                          ] 10
                    , Run Memory          [ "-t"       , "Mem:<usedratio>%"
                                          , "-L"       , "40"
                                          , "-H"       , "90"
                                          , "-m"       , "2"
                                          , "--normal" , "green"
                                          , "--high"   , "red"
                                          ] 10
                    , Run BatteryP        ["BAT0"]
                                          [ "-t"       , "<acstatus>"
                                          , "-L"       , "20"
                                          , "-H"       , "80"
                                          , "--normal" , "green"
                                          , "--low"    , "red"
                                          , "--"
                                                , "-o" , "<left>% (<timeleft>)"
                                                , "-O" , "Charging <left>%"
                                                , "-i" , "<left>%"
                                          ] 50
                    , Run BatteryN        ["BAT1"]
                                          [ "-t"       , "<acstatus>"
                                          , "-L"       , "20"
                                          , "-H"       , "80"
                                          , "--normal" , "green"
                                          , "--low"    , "red"
                                          , "--"
                                                , "-o" , "<left>% (<timeleft>)"
                                                , "-O" , "Charging <left>%"
                                                , "-i" , "<left>%"
                                          ] 50 "battery1"
                    , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ <fc=#999999>%multicpu%</fc> | <fc=#999999>%memory%</fc> | <fc=#999999>%wlan0%</fc> | <fc=#999999>%battery%</fc> <fc=#999999>%battery1%</fc>| <fc=#ee9a00>%date%</fc>"
       }
