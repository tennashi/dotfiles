" vim: set filetype=vim :
"" 一般設定
" タイトル文字を変更
set titlestring=Firefox
" 入力欄に自動フォーカスしない
set focuscontent
" beep を visualbell にし, それを表示しない
set visualbell
highlight Bell display:none
" hint 文字を変える
set hintchars=fjdksla;
" editor 設定
set editor='xfce4-terminal --disable-server --execute nvim -c "set ft=markdown"'
" カラースキーマ
colorscheme monokai
" :open で補完される項目
set complete=tlS



set messages=500
set verbose=15
set gui=notabs
set toolbars=nonavigation,nobookmarks,noaddons
set noscrollbars
set followhints=2

"" 検索設定
set ignorecase

"" keybinds
nnoremap j 5j
nnoremap k 5k
nnoremap <C-l> gt
nnoremap <C-h> gT
nnoremap U :undo<Space>
nnoremap <C-r> :restart<CR>
nnoremap <C-S-l> :tabmove! +1<CR>
nnoremap <C-S-h> :tabmove! -1<CR>
nnoremap ,es :set encoding=Shift_JIS<CR>
nnoremap ,ee :set encoding=EUC-JP<CR>
nnoremap ,eu :set encoding=UTF-8<CR>
nnoremap ,el :set encoding=ISO-2022-JP<CR>

"" プラグイン管理
source ~/.vimperator/vimppm/plugin/vimppm.js
vimppm "_libly.js"
vimppm "caret-hint.js"
vimppm "_smooziee.js"

